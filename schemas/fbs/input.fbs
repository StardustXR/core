include "input_hand.fbs";
include "input_pointer.fbs";
include "input_tip.fbs";
namespace StardustXR;

union InputDataRaw {
	Pointer,
	Hand,
	Tip,
}

table InputData {
	uid:string (required);
	input:InputDataRaw (required);
	distance:float = 0;
	datamap:[ubyte] (flexbuffer);
	order:uint = 0;
}

root_type InputData;
